<body>
  <h1>Editing Book</h1>

  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @book do |f| %>
  
  <div class = "field">
    <ladel for = "book_taitle">Title</ladel>
    <%= f.text_field :title %>
  </div>

  <div class = "field">
    <ladel for = "book_body">Body</ladel>
    <%= f.text_area :body %>
  </div>

  <div class = "actions">
    <%= f.submit 'Update Book' %>
  </div>

  <% end %>

  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to 'back', :back %>

</body>